<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.user.recorder_demo">
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_VIDEO"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera2"
                  android:required="true"/>

    <application
            android:name=".ApplicationController"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".WriteActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".VideoRecorderActivity">
        </activity>
        <activity android:name=".VoiceRecorderActivity">
        </activity>
        <activity android:name=".VoiceRecorderActivity2">
        </activity>
        <activity android:name=".VoiceRecorderActivity3">
        </activity>
        <activity android:name=".ImageCaptureActivity">
        </activity>
        <activity android:name=".ImageCaptureActivity1">
        </activity>
        <activity android:name=".MainActivity">
        </activity>
    </application>

</manifest>