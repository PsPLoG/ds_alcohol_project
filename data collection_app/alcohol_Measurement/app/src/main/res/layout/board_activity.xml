<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/background_gradation"
            android:id="@+id/relativeLayout">
        <Button
                android:background="@drawable/button_logout"
                android:drawableLeft="@android:drawable/ic_lock_power_off"
                android:text="로그아웃"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:id="@+id/btn_board_logout2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="296dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="0dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
                android:textSize="16sp" android:textColor="#555555" android:layout_marginTop="2dp"
                android:layout_alignParentEnd="true" android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"

            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:id="@+id/linearLayout2">


        <Button
                android:text="주 의 사 항"
                android:layout_width="match_parent"
                android:layout_height="120dp" android:layout_alignParentTop="true" android:id="@+id/button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true" app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="81dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0" android:textSize="32sp"
                android:textColor="#ffffff" android:background="#00a2e8"
                android:textAllCaps="false"/>
        <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <Button
                    android:id="@+id/button2"
                    android:layout_weight="1" android:layout_width="match_parent" android:layout_height="match_parent"
                    android:background="@android:color/holo_orange_light" android:textColor="#ffffff"
                    android:textSize="28sp" android:gravity="top" android:text="설정\n(User Setting)"
                    android:textAllCaps="false"/>
            <Button
                    android:id="@+id/button3"
                    android:text="통계\n(Statistics Result)"

                    android:layout_weight="1" android:layout_width="match_parent" android:layout_height="match_parent"
                    android:background="@android:color/holo_orange_dark" android:gravity="top" android:textSize="28sp"
                    android:textColor="#ffffff" android:textAllCaps="false"/>
        </LinearLayout>-->
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="16dp"
                  android:orientation="vertical"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/linearLayout2" android:background="@drawable/zizag">

    </LinearLayout>
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
                                                 tools:layout_editor_absoluteX="82dp">
        <Button
                android:id="@+id/btn_board_start2"
                android:layout_width="260dp"
                android:layout_height="170dp"
                android:padding="16dp"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="28sp"
                android:background="@drawable/button_mesure_back"
                android:drawableLeft="@drawable/drawable_left_image_mesure_alchol_mahcine"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:text="측정하기"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.894"/>


        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:elevation="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"
                android:layout_marginBottom="8dp" android:id="@+id/linearLayout">
            <ImageView

                    android:id="@+id/btn_board_mypage"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true" android:src="?android:attr/homeAsUpIndicator"/>
            <ImageView

                    android:id="@+id/btn_board_home"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:selectableItemBackground"
                    android:src="@drawable/selector_bottom_navi_home_icon"
                    android:clickable="true"/>
            <ImageView
                    android:id="@+id/btn_board_charge"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:selectableItemBackground"
                    android:src="@drawable/selector_bottom_navi_charge_icon"
                    android:clickable="true"/>

        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/txt_board_result" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_board_start2" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="48sp"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>