<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="fill_parent"
              android:minWidth="280dip" android:layout_height="wrap_content"
              android:background="#ffffffff">

    <android.support.constraint.ConstraintLayout android:orientation="vertical"
                                                 android:background="@drawable/header2"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="130dp"
    >


        <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/profile_outline"
                android:id="@+id/profile" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="7dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="9dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="9dp"
        />
        <ImageView
                android:layout_width="180dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/profile" android:id="@+id/profile_image"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/profile"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="9dp" android:layout_marginEnd="9dp" android:layout_marginTop="25dp"/>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout android:orientation="vertical"
                  android:background="@drawable/center" android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="-2dp" android:layout_marginBottom="-2dp">

        <TextView android:id="@+id/txt_info_name"
                  android:paddingRight="8dip" android:paddingLeft="8dip"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:text="...님" android:layout_gravity="center"
                  android:layout_marginTop="8dp" android:textColor="#3344cc"/>
        <View
                android:layout_width="60dp"
                android:layout_height="1dp"
                android:background="#000000" android:id="@+id/view3" android:layout_gravity="center"
                android:layout_marginBottom="12dp" android:layout_marginTop="2dp"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/content"
            android:orientation="horizontal" android:background="@drawable/center"
            android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="-2dp"
            android:layout_marginBottom="-2dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" android:padding="8dp">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="15dp" app:srcCompat="@drawable/id2" android:id="@+id/imageView17"/>
            <TextView
                    android:text="ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView20" android:layout_marginTop="32dp"
                    android:gravity="center" android:textColor="#8855cc" android:textStyle="bold"/>
            <TextView
                    android:text="..."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txt_info_id" android:gravity="center"
                    android:textColor="#8855cc" android:layout_marginBottom="4dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" android:padding="8dp">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/email" android:id="@+id/imageView18"/>
            <TextView
                    android:text="Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView23" android:layout_marginTop="36dp"
                    android:gravity="center" android:textColor="#8855cc" android:textStyle="bold"/>
            <TextView
                    android:text="..."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txt_info_email" android:gravity="center"
                    android:textColor="#8855cc"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/content2"
            android:orientation="horizontal" android:background="@drawable/center"
            android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="-2dp"
            android:layout_marginBottom="-2dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" android:padding="8dp">

            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="17dp" app:srcCompat="@drawable/gender"
                    android:id="@+id/imageView19" android:layout_gravity="center"/>
            <TextView
                    android:text="Gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView26" android:layout_marginTop="36dp"
                    android:gravity="center" android:textColor="#8855cc" android:textStyle="bold"/>
            <TextView
                    android:text="..."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txt_info_gender" android:gravity="center"
                    android:textColor="#8855cc"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" android:padding="8dp">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/phone" android:id="@+id/imageView20"/>
            <TextView
                    android:text="Phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView28" android:layout_marginTop="36dp"
                    android:gravity="center" android:textColor="#8855cc" android:textStyle="bold"/>
            <TextView
                    android:text="..."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txt_info_phone" android:gravity="center"
                    android:textColor="#8855cc"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical"
                  android:background="@drawable/footer" android:layout_width="fill_parent"
                  android:layout_height="wrap_content">

        <Button android:id="@+id/btn_info_okay"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:singleLine="true" android:text="확인" android:textColor="#ffffff" android:textSize="24sp"
                android:layout_marginBottom="8dp" android:background="@drawable/button_around4"
                android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>